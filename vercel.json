{
  "version": 2,
  "builds": [
    {
      "src": "apps/user-app/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "packages/ui/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/user-app/$1"
    },
    {
      "src": "/ui/(.*)",
      "dest": "packages/ui/$1"
    }
  ]
}
